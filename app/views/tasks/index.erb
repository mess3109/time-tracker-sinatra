<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h3><%= current_user.name %>'s Tasks</h3>
<% current_user.tags.each do |tag|%>
  <% if !tag.tasks.empty? %>
    <h4><%= tag.title.capitalize %></h4>
    <% tag.tasks.each do |task| %>
      <li><a href="/tasks/<%= task.id %>"><%= task.title.capitalize %></a></li>
    <% end %>
    <p>
  <% end %>
<% end %>
